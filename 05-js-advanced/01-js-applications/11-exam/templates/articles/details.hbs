<div class="container details">
    <div class="details-content">
        {{#with article}}
            <h2>{{title}}</h2>
            <strong>{{category}}</strong>
            <p>{{content}}</p>
            <div class="buttons">
                {{#if isAuthor}}
                    <a href="#/articles/delete/{{id}}" class="btn delete">Delete</a>
                    <a href="#/articles/edit/{{id}}" class="btn edit">Edit</a>
                {{else}}
                    {{!-- Why shouldn't the author have a back button? --}}
                    <a href="#/" class="btn edit">Back</a>
                {{/if}}
        {{/with}}
    </div>
</div>
</div>