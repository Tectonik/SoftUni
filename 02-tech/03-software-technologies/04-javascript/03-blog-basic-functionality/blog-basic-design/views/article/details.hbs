<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <p>
                    {{content}}
                </p>

                <small class="author">
                    {{this.User.fullName}}
                </small>

                <h4>Comments:</h4>
                {{#if this.Comments}} {{#each this.Comments}}
                <div class="alternatingRows modal-header">
                    <p>
                        Comment:
                        <a href="/comment/details/{{id}}">{{content}}</a>
                    </p>
                    <small class="author">
                        Author:
                        <a href="/user/details/{{this.User.id}}">
                            {{this.User.email}}
                        </a>
                    </small>
                </div>
                {{/each}} {{else}}
                <div class="alternatingRows">
                    <p>No comments yet!</p>
                </div>
                {{/if}}

                <footer>
                    <div class="pull-right">
                        {{#if userLogged}} {{#if userIsAuthor}}
                        <a class="btn btn-default btn-xs" href="/article/edit/{{id}}">Edit</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/comment/create/{{id}}">Add comment</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &laquo;</a>
                    </div>
                </footer>
            </article>
        </div>
    </div>
</div>