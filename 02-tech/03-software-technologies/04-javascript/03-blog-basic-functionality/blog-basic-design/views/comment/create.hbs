<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/comment/create/{{articleId}}">
            <fieldset>
                <legend class="col-md-offset-3 col-md-6">New Comment</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="commentContent">Content</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="commentContent" rows="5" name="content" required>{{content}}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        {{!--
                        <button type="reset" class="btn btn-default">Cancel</button>
                        --}}
                        <a class="btn btn-default" href="/article/details/{{articleId}}">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>