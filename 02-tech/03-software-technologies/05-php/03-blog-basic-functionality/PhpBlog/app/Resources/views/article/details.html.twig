{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12">
                <article>
                    <header>
                        <h2>{{ article.title }}</h2>
                    </header>

                    <p>
                        {{ article.content }}
                    </p>

                    <small class="author">
                        {{ article.author }}
                    </small>

                    <h4>Comments:</h4>
                    {% for comment in article.comments %}
                        <div class="alternatingRows modal-header">
                            <p>
                                <a href="{{ path('comment_details', {"id":comment.id}) }}">{{ comment.content }}</a>
                            </p>
                            <small class="author">
                                Author:
                                <a href="{{ path('user_public_profile', {"id":comment.author.id}) }}">
                                    {{ comment.author.email }}
                                </a>
                            </small>
                        </div>
                    {% endfor %}

                    <footer>
                        <div class="pull-right">
                            {% if userIsAuthor %}
                            <a class="btn btn-danger btn-xs" href="{{ path('article_delete', {"id":article.id }) }}">delete</a>
                            <a class="btn btn-warning btn-xs" href="{{ path('article_edit', {"id":article.id }) }}">edit</a>
                            {% endif %}
                            <a class="btn btn-default btn-xs" href="{{ path('comment_create', {"articleId":article.id }) }}">add comment</a>
                            <a class="btn btn-default btn-xs" href="{{ path('blog_index') }}">back &raquo;</a>
                        </div>
                    </footer>
                </article>
            </div>
        </div>
    </div>
{% endblock %}

